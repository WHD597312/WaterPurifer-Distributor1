<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/bg_main_item"
    android:layout_height="@dimen/dp_75">

    <ImageView
        android:id="@+id/iv_item_pic"
        android:layout_width="@dimen/dp_55"
        android:layout_height="@dimen/dp_55"
        android:src="@mipmap/ic_main_head"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_10"
        />
    <TextView
        android:id="@+id/tv_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="123456"
        android:layout_toRightOf="@+id/iv_item_pic"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_5"
        android:textColor="#333333"
        android:textSize="@dimen/sp_16"
        />
    <TextView
        android:id="@+id/tv_item_adress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="北京市东城区12号"
        android:layout_toRightOf="@+id/iv_item_pic"
        android:layout_below="@+id/tv_item_name"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_5"
        android:textColor="#898989"
        android:textSize="@dimen/sp_11"
        />
    <TextView
        android:id="@+id/tv_item_flag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已激活"
        android:layout_toRightOf="@+id/iv_item_pic"
        android:layout_below="@+id/tv_item_adress"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_5"
        android:textColor="@color/color_toblue"
        android:textSize="@dimen/sp_11"
        />
    <ImageView
        android:id="@+id/iv_item_bz1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/menu_xzn"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp_12"
        />
    <TextView
        android:id="@+id/tv_item_bz2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="天"
        android:layout_marginRight="@dimen/dp_11"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/iv_item_bz1"
        android:textColor="#898989"
        android:textSize="@dimen/sp_11"
        />
    <TextView
        android:id="@+id/tv_item_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="95"
        android:layout_marginRight="@dimen/dp_1"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/tv_item_bz2"
        android:textColor="@color/color_toblue"
        android:textSize="@dimen/sp_21"
        />
</RelativeLayout>
