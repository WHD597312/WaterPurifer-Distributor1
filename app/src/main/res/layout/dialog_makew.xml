<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login"
    >
    <TextView
        android:id="@+id/tv_make_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20"
        android:textSize="@dimen/sp_30"
        android:textColor="#272727"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#272727"
        android:layout_toRightOf="@+id/tv_make_time"
        android:layout_alignBottom="@+id/tv_make_time"
        android:text="h"
        android:layout_marginLeft="@dimen/dp_2"
        android:paddingBottom="@dimen/dp_2"
        />
    <TextView
        android:id="@+id/tv_make_bz1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_make_time"
        android:layout_marginLeft="@dimen/dp_20"
        android:text="当前连续制水时间"
        android:textSize="@dimen/sp_14"
        android:textColor="#b1b1b1"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f5f5f5"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10"
       android:layout_below="@+id/tv_make_bz1"
        />

    <TextView
        android:id="@+id/tv_mak_bz2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设置制水时间"
        android:textColor="#5b5b5b"
        android:layout_below="@+id/tv_make_bz1"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_32"
        android:textSize="@dimen/sp_15"
        />
    <EditText
        android:id="@+id/et_make_sz"
        android:layout_below="@+id/tv_mak_bz2"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="#f5f5f5"
        android:hint="输入连续制水时间"
        android:inputType="number"
        android:textSize="@dimen/sp_13"
        android:paddingLeft="@dimen/dp_10"
        />
    <TextView
        android:layout_below="@+id/et_make_sz"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_11"
        android:text="连续制水时间应大于0小于254"
        />
    <LinearLayout
        android:id="@+id/li_make_an"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_below="@+id/et_make_sz"
        android:layout_marginTop="@dimen/dp_30"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tv_make_qx"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/sp_14"
            android:text="取消"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#f5f5f5"
            />
        <TextView
            android:id="@+id/tv_make_qd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/sp_14"
            android:text="确定"
            android:gravity="center"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f5f5f5"
        android:layout_alignTop="@+id/li_make_an"
        />


</RelativeLayout>
