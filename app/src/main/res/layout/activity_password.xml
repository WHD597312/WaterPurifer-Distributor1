<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_25"/>
    <RelativeLayout
        android:layout_below="@+id/view1"
        android:id="@+id/rl_heard"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/dp_40"
            android:scaleType="centerInside"
            android:paddingRight="@dimen/dp_15"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:src="@mipmap/black_fh"
            android:layout_marginLeft="@dimen/dp_15"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请输入管理密码"
            android:layout_centerInParent="true"
            android:textSize="@dimen/sp_18"
            android:textColor="#333333"
            />

    </RelativeLayout>
    <TextView
        android:id="@+id/tv_man_bz1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请填写密码"
        android:textColor="#333333"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/rl_heard"
        android:layout_marginTop="@dimen/dp_80"
        android:textSize="@dimen/sp_16"
        />
    <EditText
        android:id="@+id/et_man_pass"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_below="@+id/tv_man_bz1"
        android:background="@color/white"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:maxLength="4"
        android:inputType="numberPassword"
        android:gravity="center"
        />

    <Button
        android:id="@+id/bt_pass_qd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_login1"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_below="@+id/et_man_pass"
        android:layout_marginTop="@dimen/dp_40"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16"
        />

</RelativeLayout>
